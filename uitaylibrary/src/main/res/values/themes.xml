<resources>

    <declare-styleable name="UITayButton">
        <attr name="uiTayBtnText" format="string" />
        <attr name="uiTayBtnEnable" format="boolean" />
        <attr name="uiTayBtnIconColorDefault" format="boolean" />
        <attr name="uiTayBtnIconStart" format="reference" />
        <attr name="uiTayBtnIconEnd" format="reference" />
        <attr name="uiTayBtnStyle" format="enum" >
            <enum name="UI_TAY_PRIMARY" value="0"/>
            <enum name="UI_TAY_SECONDARY" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="UiTayEditBasic">
        <attr name="uiTayColorIconEndDefault" format="boolean" />
        <attr name="uiTayLabelTitle" format="string" />
        <attr name="uiTayLabelEdit" format="string" />
        <attr name="uiTayLabelHint" format="string" />
        <attr name="uiTayLabelContentDescription" format="string" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="uiTayLabelEditMaxLength" format="integer" />
        <attr name="uiTayLabelEnable" format="boolean" />
        <attr name="uiTayLabelFocusable" format="boolean" />
        <attr name="uiTayLabelIconEditEnd" format="reference" />
        <attr name="uiTayLabelIconEditStart" format="reference" />
        <attr name="uiTayErrorMessage" format="string" />
        <attr name="uiTayVisibilityInfo" format="boolean" />
        <attr name="uiTayTitleVisibility" format="boolean" />
        <attr name="uiTayListBottom" format="boolean" />
        <attr name="uiTayPasswordEnabled" format="boolean" />
        <attr name="uiTayIconPasswordActive" format="reference" />
        <attr name="uiTayIconPasswordInactive" format="reference" />
    </declare-styleable>


        <declare-styleable name="UiTayEditLayout">
            <attr name="uiTayLColorIconEndDefault" format="boolean" />
            <attr name="uiTayLPasswordEnabled" format="boolean" />
            <attr name="uiTayLContentDescription" format="string" />
            <attr name="uiTayLIconPassword" format="reference" />
            <attr name="uiTayLIconDrawableEnd" format="reference" />
            <attr name="uiTayLIconDrawableStart" format="reference" />
            <attr name="uiTayLEditMaxLength" format="integer" />
            <attr name="uiTayLErrorEnabled" format="boolean" />
            <attr name="uiTayLFocusable" format="boolean" />
            <attr name="uiTayLEnabled" format="boolean" />
            <attr name="uiTayLText" format="string" />
            <attr name="uiTayLHint" format="string" />
            <attr name="uiTayLListBottom" format="boolean" />
            <attr name="android:inputType" />
            <attr name="android:imeOptions" />
        </declare-styleable>


    <style name="UiTayStyleEditLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/ui_tay_selector_input_text</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="colorControlActivated">@color/tay_edit_two_bg_corner_active</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorIconTint">@color/tay_edit_two_error_info</item>
        <item name="boxStrokeErrorColor">@color/tay_edit_two_error_info</item>
        <item name="errorTextColor">@color/tay_edit_two_error_info</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="boxBackgroundColor">@drawable/ui_tay_bg_selector_edit_layout</item>
        <item name="colorControlNormal">@color/ui_tay_white</item>
        <item name="boxCornerRadiusTopStart">@dimen/dim_tay_edit_two_bg_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dim_tay_edit_two_bg_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dim_tay_edit_two_bg_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dim_tay_edit_two_bg_radius</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/tay_edit_two_error_info</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="EditStyleGray" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/tay_edit_two_text_enable</item>
        <item name="android:textColorHint">@color/tay_edit_two_hint_enable</item>
    </style>

    <style name="UITayStyleList" parent="android:Widget">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/ic_scroll_bar_list_ui_tay</item>
    </style>

    <declare-styleable name="UiTayToolBar">
        <attr name="uiTayTextTb" format="string" />
        <attr name="uiTayIconStartTb" format="reference" />
        <attr name="uiTayIconEndTb" format="reference" />
        <attr name="uiTayTbIndicator" format="boolean" />
        <attr name="uiTayTbIconColorDefault" format="boolean" />
        <attr name="uiTayTbProgress" format="integer" />
        <attr name="uiTayTbMaxProgress" format="integer" />
        <attr name="uiTayStyleTbIcon" format="enum" >
            <enum name="UI_TAY_NONE" value="0"/>
            <enum name="UI_TAY_ICON_START" value="1"/>
            <enum name="UI_TAY_ICON_END" value="2"/>
            <enum name="UI_TAY_ICON_TWO" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="UITaySnackBar">
        <attr name="uiTaySBText" format="string" />
        <attr name="uiTaySBDuration" format="integer" />
        <attr name="android:background"/>
        <attr name="android:textColor"/>
    </declare-styleable>

    <declare-styleable name="UiTayInfo">
        <attr name="uiTayTextInformation" format="string" />
        <attr name="uiTayIconInformation" format="reference" />
        <attr name="uiTayStyleInfoEnable" format="boolean" />
        <attr name="android:background"/>
        <attr name="android:textColor"/>
        <attr name="uiTayStyleInfo" format="enum" >
            <enum name="UI_TAY_INFO" value="0"/>
            <enum name="UI_TAY_ERROR" value="1"/>
        </attr>
    </declare-styleable>


    <style name="UITayDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>


    <style name="UITayDatePickerBasic" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/tay_dp_header_background</item>
        <item name="android:windowBackground">@color/tay_dp_background</item>
        <item name="android:colorControlActivated">@color/tay_dp_selected</item>
        <item name="android:textColorPrimary">@color/tay_dp_unselected</item>
        <item name="android:textColorSecondary">@color/tay_dp_text_header</item>
    </style>

    <style name="UITayTimePickerBasic" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/tay_dp_header_background</item>
        <item name="android:windowBackground">@color/tay_tp_b_background</item>
        <item name="android:colorControlActivated">@color/tay_tp_b_selected</item>
        <item name="android:textColorPrimary">@color/tay_tp_b_unselected</item>
        <item name="android:textColorSecondary">@color/tay_tp_b_text_header</item>
    </style>


    <style name="UITayTimePickerSpinner"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogTheme">@style/UiTayDialogTimeTheme</item>
        <item name="android:timePickerStyle">@style/UiTayTimePicker</item>
        <item name="android:windowBackground">@drawable/bg_time_picker_spinner</item>
        <item name="android:colorControlActivated">@color/tay_tp_selected</item>
        <item name="android:textColorPrimary">@color/tay_tp_selected</item>
        <item name="android:textColorSecondary">@color/tay_tp_unselected</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/UiTayTimePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/UiTayTimePickerButtonStyle</item>

    </style>


    <style name="UiTayTimePickerButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/tay_tp_btn</item>
    </style>

    <style name="UiTayDialogTimeTheme"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/UiTayTimePicker</item>
    </style>

    <style name="UiTayTimePicker"
        parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>


    <style name="UiTayDialogLayoutStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="colorPrimary">@color/ui_tay_dl_transparent</item>
        <item name="colorPrimaryDark">@color/ui_tay_dl_transparent</item>
        <item name="colorAccent">@color/ui_tay_dl_transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/ui_tay_dl_transparent</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/ui_tay_dl_transparent</item>
    </style>

</resources>